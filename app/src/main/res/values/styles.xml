<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btn_rounded_corner</item>
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/background_main_color</item>
        <item name="android:textColorPrimary">@color/text_blue</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textColorSecondaryInverse">@color/text_blue</item>
        <item name="android:textColorSecondary">@color/text_blue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:background">@color/background_main_color</item>
        <item name="android:textColorPrimary">@color/text_blue</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textColorSecondaryInverse">@color/text_blue</item>
        <item name="android:textColorSecondary">@color/text_blue</item>
    </style>


</resources>

