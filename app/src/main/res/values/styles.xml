<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_blue</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/background_main_color</item>
        <item name="android:textColorPrimary">@color/text_blue</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textColorSecondaryInverse">@color/text_blue</item>
        <item name="android:textColorSecondary">@color/text_blue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:background">@color/background_main_color</item>
        <item name="android:textColorPrimary">@color/text_blue</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textColorSecondaryInverse">@color/text_blue</item>
        <item name="android:textColorSecondary">@color/text_blue</item>
    </style>


</resources>

